<%= form_for @video_content, :html => { :class => "form-horizontal video_content" } do |f| %>

  <% if @video_content.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@video_content.errors.count, "error") %> prohibited this video_content from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @video_content.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :videoUrl, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :videoUrl, :class => 'form-control' %>
    </div>
    <%=f.error_span(:videoUrl) %>
  </div>
  <div class="form-group">
    <%= f.label :createdBy, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :createdBy, :class => 'form-control' %>
    </div>
    <%=f.error_span(:createdBy) %>
  </div>
  <div class="form-group">
    <%= f.label :script, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :script, :class => 'form-control' %>
    </div>
    <%=f.error_span(:script) %>
  </div>
  <div class="form-group">
    <%= f.label :lastUpdated, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lastUpdated, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lastUpdated) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                video_contents_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
