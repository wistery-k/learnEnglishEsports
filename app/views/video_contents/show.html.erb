<%- model_class = VideoContent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @video_content.videoUrl %>" frameborder="0" allowfullscreen></iframe>
<textarea> <%= @video_content.script %> </textarea>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @video_content.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @video_content.updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              video_contents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_video_content_path(@video_content), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              video_content_path(@video_content),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
